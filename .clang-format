# clang-format configuration
# created by xiaodong

# A style complying with [Google's C++ style guide ](https: //google.github.io/styleguide/cppguide.html)
BasedOnStyle: Google

# ColumnLimit is bigger than 80 since we have modern wide screens
ColumnLimit: 100

# Align variables on consecutive declarations
AlignConsecutiveDeclarations: true

# Avoid bin-packing to conserve space
BinPackArguments: false
BinPackParameters: false

#Force pointers to the type
DerivePointerAlignment: false
PointerAlignment: Left